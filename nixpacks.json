{
  "phases": {
    "setup": {
      "nixPkgs": ["python311", "postgresql"]
    },
    "install": {
      "cmds": [
        "pip install --upgrade pip",
        "pip install -r requirements.txt"
      ]
    },
    "build": {
      "cmds": [
        "mkdir -p uploads"
      ]
    }
  },
  "start": {
    "cmd": "uvicorn app.main:app --host 0.0.0.0 --port $PORT"
  }
}
