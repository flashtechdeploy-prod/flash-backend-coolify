{
  "providers": ["python"],
  "variables": {
    "PYTHON_VERSION": "3.11",
    "PIP_NO_CACHE_DIR": "1"
  },
  "phases": {
    "setup": {
      "nixPkgs": ["python311", "python311Packages.pip", "postgresql"]
    },
    "install": {
      "cmds": [
        "python -m pip install --upgrade pip",
        "python -m pip install -r requirements.txt"
      ]
    },
    "build": {
      "cmds": [
        "mkdir -p uploads"
      ]
    }
  },
  "start": {
    "cmd": "python -m uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}"
  }
}
